import java.util.*;
public class FindingShoes {
  public static void main(String args[]){
    Scanner sc = new Scanner(System.in);
    int t = sc.nextInt();
    while(t-->0){
      int N = sc.nextInt();
      int M = sc.nextInt();
      if(N<=M){
        System.out.println(N);  
      } else {
        System.out.println((N-M)+N);  
      }
    }
   }
}
