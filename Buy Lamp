public class BuyLamp {
    public static void main(String args[]){  
    Scanner scn = new Scanner(System.in);
    int t = scn.nextInt();
    while(t-->0){
        int n = scn.nextInt();
        int k = scn.nextInt();
        int x = scn.nextInt();
        int y = scn.nextInt();
        
        int r = k*x;
        int l = (n-k)*y;
        
        if(x<=y){
        System.out.println(x*n);
        }
        else if(y<x){
        System.out.println(r+l);
        }
    }
}
}
