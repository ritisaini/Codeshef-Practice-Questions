public class ChefEren {
  public static void main(String args[]){    
    Scanner sc = new Scanner(System.in);
    int t = sc.nextInt();
    while(t-->0){
      int N = sc.nextInt();
      int A = sc.nextInt();
      int B = sc.nextInt();
      int count = 0;
      for(int i=1; i<=N; i++){
        if(i%2==0){
          count = count + A;    
        } else {
          count = count + B;  
        }
      }
      System.out.println(count);
    }
  }
}