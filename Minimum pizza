import java.util.*;
public class Minimum pizza {
    public static void main(String args[]){ 

	int T,i;
		Scanner sc=new Scanner(System.in);
		T=sc.nextInt();
		while(T>0){
		    int a[]=new int[2];
		    for(i=0;i<2;i++)
		    a[i]=sc.nextInt();
		    int required=a[0]*a[1];
		    int no_of_pizzas=0;
		    while(required>0){
		        no_of_pizzas++;
		        required-=4;
		    }
		    System.out.println(no_of_pizzas);
		    T--;
		}
	}
}
