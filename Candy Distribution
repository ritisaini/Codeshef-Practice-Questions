public class CandyDistribution {
   public static void main(String args[]){  
    Scanner sc = new Scanner(System.in);
    int t = sc.nextInt();
    while(t-->0){
      int N = sc.nextInt();
      int M = sc.nextInt();
      int A = N/M;
      if(N%M==0 && A%2==0){
        System.out.println("YES");  
      } else {
        System.out.println("NO");    
      }
    }
  }
}