import java.util.*;
public class FlipCards {
   public static void main(String args[]){  
    Scanner sc = new Scanner(System.in);
    int t = sc.nextInt();
    while(t-->0){
      int N = sc.nextInt();
      int X = sc.nextInt();
      if(N-X>X){
        System.out.println(X);  
      } else {
        System.out.println(N-X);   
      }
    }
  }
}